{
  "name": "mymusic",
  "version": "0.1.7",
  "description": "本地音乐播放器 - Electron应用",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "test": "echo \"Error: no test specified\" && exit 1",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "keywords": ["music", "player", "electron", "audio"],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "electron": "^39.0.0",
    "electron-builder": "^26.0.12"
  },
  "dependencies": {
    "music-metadata": "^10.0.0",
    "node-id3": "^0.2.6"
  },
  "build": {
    "appId": "com.ividernvi.mymusic",
    "productName": "MyMusic",
    "protocols": {
      "name": "mymusic",
      "schemes": ["mymusic"]
    },
    "linux": {
      "target": ["AppImage"],       
      "category": "AudioVideo"       
    },
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    }
  }
}